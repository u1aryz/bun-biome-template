{
	"$schema": "./node_modules/oxlint/configuration_schema.json",
	"categories": {
		"correctness": "error",
		"suspicious": "error",
		"pedantic": "warn",
		"perf": "warn",
		"style": "warn"
	},
	"plugins": ["unicorn", "oxc", "typescript", "import", "promise"],
	"rules": {
		"no-magic-numbers": "off",
		"id-length": "off",
		"import/no-named-export": "off",
		"import/prefer-default-export": "off"
	}
}
